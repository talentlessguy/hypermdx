{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "src",
    "isolatedModules": true,
    "outDir": "dist",
    "preserveSymlinks": true,
    "types": ["@types/node"]
  },
  "include": ["src/**/*"]
}
